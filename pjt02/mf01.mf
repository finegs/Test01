CXX = g++

TARGET=a3.exe

all:clean $(TARGET)

#cppsrc = $(wildcard *.cpp)
cppsrc = $(TARGET:.exe=.cpp)
objs   =$(cppsrc:.cpp=.o)

CFLAGS=-W -Wall
#LDFLAGS=-std=c++17 -lz -lm
LDFLAGS=-lz -lm

$(objs): $(cppsrc)
	$(CXX) -c $^ $(CFLAGS) 

$(TARGET): $(objs)
	$(CXX) -o $@ $^ $(LDFLAGS)

clean:
	@del /F /Q $(objs) $(TARGET)
